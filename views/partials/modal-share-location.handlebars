<script>
    navigator.geolocation.getCurrentPosition(function(position) {
        var currentPosition = {
            lat: position.coords.latitude,
            lng: position.coords.longitude
        };
        jQuery('#location_lat_lng_link').attr('href', 'http://www.google.com/maps/place/'+currentPosition.lat + ',' + currentPosition.lng)
        jQuery('#location_lat_lng').html('<p>Your current coordinates: ' + currentPosition.lat + ', ' + currentPosition.lng + '</p>');
    });

    function copyMapsLink() {
        navigator.clipboard.writeText(jQuery('#location_lat_lng_link').attr('href'));
        
    }
</script>